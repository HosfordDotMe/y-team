<div class="undernav">
  <div class="container">
    <div class="card">
      <div class="card-body">
        <div class="container">
          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="card bg-dark text-white m-0">
                <img class="card-img">
                <img style="height:50vh;" src="<%= @place.image_uri %>" alt="<%= @place.image_uri %>">
                <div class="card-img-overlay">
                  <h4 class="card-title"><%=@place.name %></h4>
                </div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div id='map' class="places_map" data-place="<%= @place.to_json %>" style="height:50vh;">
                <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.gmaps_api_key %>&callback=initMap" type="text/javascript"></script>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-md-12 mb-3" style="background-color:white; height:5vh;"></div>
          </div>
        </div>
        <div class="container">
          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="card-body">
                <h4 class="card-title"><%= @category.name %></h4>
                <p class="card-text"><%=@place.description %></p>
                <a href="places/new" class="button">Add a new place!</a>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="card-body">
                <h4 class="card-title">Comments</h4>
                
                <% @place_comments.select{|p| p.place_id == @pid}.each do |pc| %>  
                  <p class = "card-text">
                  <%= pc.title %>
                  <br>
                  <%= pc.text %>
                  </br>
                  </p>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>